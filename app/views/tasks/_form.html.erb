<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :tilte %><br>
    <%= f.text_field :tilte %><br>
    <div id="chores">  
      <%= f.fields_for :chores do |chore| %>
        <%= render 'chore_fields', :f => chore %>
      <%end%>
      <%= link_to_add_association 'add user', f, :chores, class: 'btn btn-xs btn-info' %>
    </div>
    <div id="comments">  
      <%= f.fields_for :comments do |comment| %>
        <%= render 'comment_fields', :f => comment %>
      <%end%>
      <%= link_to_add_association 'add comment', f, :comments, class: 'btn btn-xs btn-info' %>
    </div>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :done %>
    <%= f.check_box :status, {},"done", "open" %>
  </div>
  <div class="actions">
    <%= f.submit 'Create task', class: ' btn btn-success' %>
  </div>
<% end %>
