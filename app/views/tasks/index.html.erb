<% unless notice.nil? %>
  <p id="notice"><%= notice %></p>
<% end %>

<div class="row">
  <div class="pull-right" role="group">
    <%= link_to 'New Task', new_task_path, class: "btn btn-success btn-lg active"  %>
  </div>
</div>
<div class="row">
  <div class="panel panel-warning">
    <div class="panel-heading">Pendent tasks</div>
    <div class="panel-body">
      <div id="unfinished-tasks-table" class="tasks-table" data-task-status="open">
        <header class="tasks-table__header row">
          <div class="col-xs-3">Title</div>
          <div class="col-xs-5">Description</div>
          <div class="col-xs-1 text-center">Status</div>
        </header>
        <% @tasks.each do |task| %>
          <div class="task row" data-task-id="<%= task.id %>">
            <div class="col-xs-3">
              <%= task.tilte %>
            </div>  
            <div class="col-xs-5">
              <%= task.description %>
            </div>
            <div class="col-xs-1 text-center">
              <%= task.status %>
            </div>
            <div class="col-xs-3 btn-group">
              <%= link_to 'Show', task, class: 'btn btn-primary btn-sm' %>
              <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-warning btn-sm' %>
              <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<style>
  .tasks-table {
    padding-bottom: 20px;
  }
  .tasks-table .task {
    padding: 10px 0;
    border-bottom: 1px solid rgb(224, 224, 224);
  }
  .tasks-table .tasks-table__header {
    border-bottom: 1px solid rgb(224, 224, 224);
    font-weight: 600;
    line-height: 30px;
    margin-top: 15px;
  }
  .tasks-table .task:first-child {
    border-top: 1px solid rgb(224, 224, 224);
  }
  .tasks-table .task div {
    line-height: 30px;
  }
</style>
<div class="row">
  <div class="panel panel-success">
    <div class="panel-heading">Completed tasks</div>
    <div class="panel-body">
      <div id="finished-tasks-table" class="tasks-table" data-task-status="done">
        <header class="tasks-table__header row">
          <div class="col-xs-3">Title</div>
          <div class="col-xs-5">Description</div>
          <div class="col-xs-1 text-center">Status</div>
        </header>
        <% @finished_tasks.each do |task| %>
          <div class="task row" data-task-id="<%= task.id %>">
            <div class="col-xs-3">
              <%= task.tilte %>
            </div>  
            <div class="col-xs-5">
              <%= task.description %>
            </div>
            <div class="col-xs-1 text-center">
              <%= task.status %>
            </div>
            <div class="col-xs-3 btn-group">
              <%= link_to 'Show', task, class: 'btn btn-primary btn-sm' %>
              <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-warning btn-sm' %>
              <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>