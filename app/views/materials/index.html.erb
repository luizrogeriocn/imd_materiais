<div class="row">
  <div class="pull-right" role="group">
    <%= link_to 'New Material', new_material_path, class: "btn btn-success btn-lg active"  %>
  </div>
</div>

<div class="row">
  <div class="panel panel-success">
    <div class="panel-heading">Materiais</div>
    <div class="panel-body">
      <table class="table">
        <thead>
            <tr>
              <th>Lesson</th>
              <th>Description</th>
              <th>File</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @materials.each do |material| %>
              <tr>
                <td><%= material.lesson.lesson_number %></td>
                <td><%= material.description %></td>
                <td><%= link_to 'Download', material.file.url, download: true %></td>
                <td><%= link_to 'Show', material %></td>
                <td><%= link_to 'Edit', edit_material_path(material) %></td>
                <td><%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div