<% unless notice.nil? %>
  <p id="notice"><%= notice %></p>
<% end %>

<div class="row">
  <div class="pull-right" role="group">
    <%= link_to 'New Lesson', new_lesson_path, class: "btn btn-success btn-lg active"  %>
  </div>
</div>

<div class="row">
  <div class="panel panel-success">
    <div class="panel-heading">Lessons</div>
    <div class="panel-body">
      <table class="table">
        <thead>
            <tr>
              <th>Lesson number</th>
              <th>Subject</th>
              <th>Offer</th>
              <th>Teacher</th>
              <th>Description</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @lessons.each do |lesson| %>
            <tr>
              <td><%= lesson.lesson_number %></td>
              <td><%= lesson.subject.title %></td>
              <td><%= lesson.offer.year_semester %>
              <td><%= lesson.users.first.nickname if  lesson.users.size> 0 %></td>
              <td><%= lesson.description %></td>
              <td><%= link_to 'Show', lesson %></td>
              <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
              <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>