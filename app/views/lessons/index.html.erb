<p id="notice"><%= notice %></p>

<h1>Listing Lessons</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Lesson number</th>
      <th>Subject</th>
      <th>Offer</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.lesson_number %></td>
        <td><%= lesson.subject.title %></td>
        <td><%= lesson.offer.year %>.<%= lesson.offer.semester %></td>
        <td><%= lesson.description %></td>
        <td><%= link_to 'Show', lesson %></td>
        <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
        <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

