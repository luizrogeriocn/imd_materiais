<% unless notice.nil? %>
  <p id="notice"><%= notice %></p>
<% end %>

<div class="row">
  <div class="pull-right" role="group">
    <%= link_to 'New User', new_user_path, class: "btn btn-success btn-lg active"  %>
  </div>
</div>

<div class="row">
  <div class="panel panel-success">
    <div class="panel-heading">Users</div>
    <div class="panel-body">
      <table class="table">
        <thead>
            <tr>
              <th>Nickname</th>
              <th>Role</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.nickname %></td>
                <td><%= user.roles.first.title %></td>
                <td><%= link_to 'Show', user, class: 'btn btn-success btn-sm' %></td>
                <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-sm' %></td>
                <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>